{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esNext",
    "target": "es2020",
    "sourceMap": true,
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "paths": {
      "@i18n": ["./src/Utils/i18n.ts"]
    }
  }
}
